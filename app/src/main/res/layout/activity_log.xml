<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cl"
    android:layout_height="match_parent"
    tools:context="com.shhatrat.loggerek.LogActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/f_mylog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="8dp"
        app:backgroundTint="@android:color/holo_blue_light"
        app:layout_constraintTop_toBottomOf="@+id/f_bad"
        app:srcCompat="@drawable/ic_tab_white_24dp"
        tools:layout_editor_absoluteX="172dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/f_bad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="8dp"
        app:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@+id/f_good"
        app:srcCompat="@drawable/ic_sentiment_very_dissatisfied_white_24dp"
        tools:layout_editor_absoluteX="172dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/f_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@android:color/holo_green_light"
        app:srcCompat="@drawable/ic_sentiment_very_satisfied_white_24dp"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="235dp" />

    <ProgressBar
        android:id="@+id/f_progress"
        android:indeterminate="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="291dp" />
</android.support.constraint.ConstraintLayout>
